<script>
	LsFun.getScript('/js/pjax.js', LoadPjax)
	function LoadPjax() {
		window.pjax = new Pjax({
			selectors: [
				'head title',
				'head meta[name="keywords"]',
				'head meta[name="description"]',
				'#container',
			],
			cacheBust: false
		});
	}
	// Pjax请求错误时，跳转到404页面
	document.addEventListener('pjax:error', (err) => {
		if (err.request.status === 404) pjax.loadUrl('/404/')
	})
</script>